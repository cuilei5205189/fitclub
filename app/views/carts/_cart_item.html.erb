<div class="item">
      <%= link_to image_tag(cart_item.product.image_url, class: "img-thumbnail w-50"), product_path(cart_item.product) %>
    <div class="item-details">
        <p class="item-title">
        <%= link_to(cart_item.product.title, product_path(cart_item.product)) %>
        </p>
        <p class="item-price">
          <strong>
            Â¥<% if cart_item.product.discount.present? %>
               <%= cart_item.product.price.to_i * cart_item.product.discount / 100 * cart_item.quantity%>
             <% else %>
               <%= cart_item.product.price * cart_item.quantity %>
            <% end %>
          </strong>
        </p>
    </div>

    <div class="cart-quantity-box input-group" style="width: 70px">
      <%= button_to("-", remove_quantity_cart_item_path(cart_item.product_id), class: "cart-quantity-actions btn btn-sm btn-outline-secondary") %>
      <input class="cart-quantity-input m-0 py-0  px-0 form-control text-center" type="text" disabled value="<%= cart_item.quantity %>">
      <%= button_to("+", add_quantity_cart_item_path(cart_item.product_id), class: "cart-quantity-actions btn btn-sm btn-outline-secondary") %>
    </div>

    <div class="cart-delete">
        <%= button_to cart_item_path(cart_item.product_id), class: "item-remove btn  btn-danger",  method: :delete do %>
        <i class="bi bi-trash"></i>
        <% end %>
    </div>

</div>