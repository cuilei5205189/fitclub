<% if flash.any? %>
  <% user_facing_flashes.each do |key, value| %>
    <div class="alert alert-dismissable fixed-top mt-6 fade show flash d-flex justify-content-between alert-<%= flash_class(key) %>">
      <strong> <%= value %> </strong> 
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% end %>
<% end %>
