<div class="group">
  <%= f.input :title %>
</div>

<div class="group">
  <%= f.input :description %>
</div>

<div class="group">
  <%= f.input :quantity %>
</div>

<div class="group">
  <%= f.input :price %>
</div>

<div class="group">
  <%= f.input :discount,:label => "折扣 % ($100 x 80% = $80)" %>
</div>

<%# if @product.image.present? %>
  <span>目前商品图</span> <br>
  <%#= image_tag(@product.image.thumb.url) %>
<%# end %>

<div class="group">
  <%= f.input :image, as: :file %>
</div>

<div class="group">
  <%= f.input :is_public, label:"上架" %>
</div>

<div class="group">
  <%= f.association :category, default:@product.category%>
</div>

<br>
<%= f.submit "Submit", data: { disable_with: "Submitting..." }, class:"btn btn-primary" %>
