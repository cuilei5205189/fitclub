<h2 class="text-center">新增评论</h2>
<p class="text-center"><%= @product.title %></p>
<div class="col-md-10">
  <%= simple_form_for [@product,@comment] do |f| %>
    <div class="form-group">
      <%= f.input :content, input_html: { class: "form-control"} %>
    </div>
    <div class="form-actions">
      <%= f.submit "提交", disable_with: "Submiting...", class: "btn btn-primary"%>
    </div>
  <% end %>
</div>
