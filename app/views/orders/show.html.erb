<div class="contianer">
  <div class="col-md-10 col-md-offset-1 col-xs-12">
    <span>
      <h2> 订单状态 </h2>
      <% if  @order.aasm_state == "order_placed" %>

          <div class="progress">
            <div class="progress-bar bg-danger" role="progressbar" style="width:33%">
              等待付款
            </div>
          </div>

      <% end %>

      <% if  @order.aasm_state == "paid" %>

      <div class="progress">
        <div class="progress-bar bg-info" role="progressbar" style="width:75%">
          已付款
        </div>
      </div>

      <% end %>


      <% if  @order.aasm_state == "activated" %>

      <div class="progress">
        <div class="progress-bar bg-success" role="progressbar" style="width:100%">
          已激活
        </div>
      </div>

      <% end %>

      <% if  @order.aasm_state == "good_returned" %>
        <div class="progress">
          <div class="progress-bar bg-dark" role="progressbar" style="width:100%">
            已退货
          </div>
        </div>
      <% end %>

      <% if  @order.aasm_state == "order_cancelled" %>
        <div class="progress">
          <div class="progress-bar" role="progressbar" aria-valuenow="70"
          aria-valuemin="0" aria-valuemax="100" style="width:100%">
            订单已取消
          </div>
        </div>
      <% end %>

    </span>

    <h2> 订单明细 </h2>

    <table class="table table-bordered">
      <thead>
        <tr>
          <th width="80%">商品明细</th>
          <th>单价</th>
          <th>评价</th>
        </tr>
      </thead>
      <tbody>

        <% @product_lists.each do |product_list| %>
          <tr>
            <td>
              <% if product_list.product.present? %>
                <%= link_to(product_list.product.title, product_path(product_list.product)) %>
              <% else %>
                <%= product_list.product_name %>
              <% end %>
            </td>
            <td>
              <%= product_list.product_price %>
            </td>
            <td>
            <% if product_list.product.present? %>
              <%= link_to("评价", new_product_comment_path(product_list.product)) %>
            <% else %>
              <%= "已下架或失效" %>
            <% end %>
            </td>
          </tr>
        <% end %>

      </tbody>
    </table>

    <div class="total clearfix amount">
      <span class="pull-right">
        <h4>总计 <%= @order.total %> 元</h4>
      </span>
    </div>


     <hr>

     <h2> 寄送资讯 </h2>

     <table class="table table-striped table-bordered">
      <tbody>
        <tr>
          <td>
            订购人
          </td>
        </tr>
        <tr>
          <td>
            <%= @order.billing_name %>
          </td>
        </tr>
        <tr>
          <td>
            联系电话
          </td>
        </tr>
        <tr>
          <td>
            <%= @order.phone_number %>
          </td>
        </tr>
      </tbody>
    </table>



    <div class="pull-left">
      <% if @order.order_placed? || @order.paid? %>
        <%= button_to("申请取消订单", apply_to_cancel_order_path(@order), method: :post, class: "btn  btn-danger") %>
      <% end %>
    </div>
    <% if !@order.is_paid? %>
      <div class="group pull-right">
          <%= button_to("以支付宝支付", pay_with_alipay_order_path(@order.token), :method => :post, :class => "btn btn-primary") %>
          <%= button_to("以微信支付", pay_with_wechat_order_path(@order.token), :method => :post, :class => "btn btn-primary") %>
      </div>
    <% end %>
  </div>
</div>
