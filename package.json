{
  "name": "app",
  "private": "true",
  "dependencies": {
    "@hotwired/stimulus": "^3.0.1",
    "@hotwired/turbo-rails": "^7.0.1",
    "@popperjs/core": "^2.10.2",
    "bootstrap": "^5.1.3"
  },
  "devDependencies": {
    "esbuild": "^0.13.14",
    "sass": "^1.43.4"
  },
  "scripts": {
    "build": "esbuild --tree-shaking=true --splitting --format=esm --bundle --minify app/javascript/*.* --outdir=app/assets/builds",
    "build:css": "sass --load-path=node_modules --no-source-map --style=compressed ./app/assets/stylesheets/application.bootstrap.scss ./app/assets/builds/application.css"
  }
}
